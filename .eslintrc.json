{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:prettier/recommended",
    "prettier/standard",
    "plugin:vue/essential",
    "problems"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "$": true,
    "ga": true,
    "by": true,
    "browser": true,
    "element": true,
    "inject": true,
    "io": true,
    "moment": true,
    "Modernizr": true,
    "Promise": true,
    "__TESTING__": true,
    "_": false,
    "ApplicationConfiguration": true,
    "require": true,
    "Vue": true,
    "app": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["vue", "prettier"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  }
}
